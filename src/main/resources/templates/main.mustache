<div>
    <form class="form-group" method="post" action="/add"
          enctype="multipart/form-data"
          id="form" style="font-family:Quicksand, sans-serif;background-color:rgba(44,40,52,0.73);width:500px;padding:40px;">
        <h2 class="text-center">Добавит новый товар</h2>
        <div class="form-group"><input class="form-control-file"  name="img" type="file" required></div>
        <div class="form-group"><input class="form-control" name="nomi" placeholder="Имя" type="text" required></div>
        <div class="form-group"><textarea class="form-control" name="info" placeholder="Собщения" rows="14"required></textarea></div>
        <div class="form-group"><input class="form-control" name="narxi" placeholder="Цена" type="number" required></div>
        <div class="form-group"><input class="btn btn-primary" type="submit" Отправить></div>
    </form>
</div>
<!-- Row -->

    <!-- Datatables -->
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
                <form class="form-group" action="/delete">
                    <input class="form-control" type="number" name="id">
                    <input class="btn btn-primary" type="submit" value="Delete">
                </form>
            </div>
            <div class="table-responsive p-3">
                <table class="table align-items-center table-flush" id="dataTable">
                    <thead class="thead-light">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ism</th>
                            <th>Info</th>
                            <th>Narxi</th>
                            <th>IMG</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#maxsulotlar}}
                            <tr>
                                <th>{{id}}</th>
                                <th>{{nomi}}</th>
                                <th>{{usr}}</th>
                                <th>{{narxi}}</th>
                                <th><img src="{{image}}"></th>
                            </tr>
                        {{/maxsulotlar}}
                        </tbody>
                </table>
            </div>

        </div>
    </div>


<script src="assets/js/jquery.min.js"></script>
